# Admin password for /api/admin/auth endpoint
ADMIN_PASSWORD=password

# Server port (optional, defaults to 3000)
PORT=3000

# Cloudflare R2 Configuration
# Your R2 account ID endpoint (e.g., https://account-id.r2.cloudflarestorage.com)
R2_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com

# R2 Access credentials (create in Cloudflare dashboard)
R2_ACCESS_KEY_ID=your_access_key_id
R2_SECRET_ACCESS_KEY=your_secret_access_key

# R2 Bucket name
R2_BUCKET_NAME=images

# Public URL for accessing images (R2.dev subdomain)
# Get this URL from Cloudflare R2 Settings -> Public Access -> Allow Access
R2_PUBLIC_URL=https://pub-xxxxx.r2.dev
